<%- include('../components/header') %>
<div class="page-wrapper">
  <!-- ============================================================== -->
  <!-- Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <div class="page-breadcrumb pb-5">
    <div class="container mt-5 bg-light border shadow">
      <% if(locals.success !="" ) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= locals.success %>
      </div>
      <% } %>
      <form
        action="/extraSubCategory/add"
        method="post"
        class="form-horizontal"
      >
        <div class="card-body">
          <h4 class="card-title">Add Extra Sub Category</h4>
          <div class="form-group row">
            <label
              for="fname"
              class="col-sm-3 text-end control-label col-form-label"
              >Category</label
            >
            <div class="col-sm-9">
              <select name="category" id="" class="form-control">
                <option value="">--Select Category--</option>
                <% category.map((cat,i)=>{ %>
                <option value="<%= cat._id %>"><%= cat.category %></option>
                <%})%>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label
              for="fname"
              class="col-sm-3 text-end control-label col-form-label"
              >Sub Category</label
            >
            <div class="col-sm-9">
              <select name="subcategory" class="form-control">
                <option value="">--Select Sub-Category--</option>
                <% subcat.map((sc,i)=>{ %>
                <option value="<%= sc._id %>"><%= sc.subcategory %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label
              for="fname"
              class="col-sm-3 text-end control-label col-form-label"
              >Extra Sub Category</label
            >
            <div class="col-sm-9">
              <input
                type="text"
                name="extrasubcategory"
                class="form-control"
                id="fname"
                placeholder="Extra Sub Category Name Here"
              />
            </div>
          </div>
        </div>
        <div class="border-top">
          <div class="card-body">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/extraSubCategory" class="btn btn-info">View</a>
          </div>
        </div>
      </form>
    </div>
  </div>

  <%- include('../components/footer') %>
</div>
<%- include('../components/footer') %>
