<%- include('../components/header') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="page-wrapper">
      <!-- ============================================================== -->
      <!-- Bread crumb and right sidebar toggle -->
      <!-- ============================================================== -->
      <div class="page-breadcrumb" style="height: 100%">
        <div class="row">
          <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title ms-2 my-3">Category</h4>
          </div>

          <div class="container-fluid">
            <% if(locals.success !="" ) { %>
            <div
              class="alert alert-success alert-dismissible fade show"
              role="alert"
            >
              <%= locals.success %>
            </div>
            <% } %>
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                      <h5 class="card-title">Table</h5>

                      <a href="/products/add" class="btn btn-success">Add</a>
                    </div>
                  </div>

                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product</th>
                        <th scope="col">Image</th>
                        <th scope="col">Extra-Sub-Category</th>
                        <th scope="col">Sub-Category</th>
                        <th scope="col">Category</th>
                        <th scope="col">Status</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% products.map((val,i)=>{ %>
                      <tr>
                        <td><%= ++i %></td>
                        <td>
                          <%= val.name %> <br />
                          <%= val.description %>
                        </td>
                        <td>
                          <img
                            src="<%= val.image %>"
                            width="100"
                            height="100"
                            class=""
                            alt=""
                          />
                        </td>
                        <td><%= val.extrasubcategoryId.extrasubcategory %></td>
                        <td><%= val.subcategoryId.subcategory %></td>
                        <td><%= val.categoryId.category %></td>
                        <td>
                          <button class="btn btn-warning">
                            <%= val.status %>
                          </button>
                        </td>
                        <td>
                          <a
                            href="/products/delete?id=<%= val._id %>"
                            class="btn btn-danger"
                            >delete</a
                          >
                        </td>
                      </tr>
                      <%}) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- ============================================================== -->
      <!-- End footer -->
      <!-- ============================================================== -->
    </div>
  </body>
</html>
<%- include('../components/footer') %>
